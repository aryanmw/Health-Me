<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#eeeded"


    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/workout_background">
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="MY WORKOUT"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/alegreya_sans_bold"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                >

            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rel1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="90dp"

                android:orientation="horizontal"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    app:cardBackgroundColor="#eeeded"
                    android:elevation="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="19dp"
                    android:layout_marginRight="60dp">

                    <TextView

                        android:layout_width="105dp"
                        android:layout_height="match_parent"
                        android:text="List"
                        android:layout_marginTop="7dp"
                        android:id="@+id/list"
                        android:textColor="#666666"
                        android:textSize="18dp"
                        android:textAlignment="center"
                        />

                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/mybutton"
                    android:layout_marginTop="20dp"
                    android:layout_centerVertical="true"
                    >

                    <TextView
                        android:layout_width="105dp"
                        android:layout_height="match_parent"

                        android:text="My Workout"
                        android:id="@+id/my_workout"
                        android:textColor="#ffffff"
                        android:textSize="17dp"
                        android:textAlignment="center"
                        android:layout_marginTop="7dp"/>

                </LinearLayout>




            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="50dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="25dp"
                android:id="@+id/cv_mon"
                app:cardBackgroundColor="#5000ca"
                android:layout_marginLeft="20dp"


                >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:cardCornerRadius="45dp"
                    app:cardBackgroundColor="#EEEDED"
                    android:layout_centerInParent="true"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="MON"
                        android:textSize="30dp"
                        android:textAlignment="center"
                        android:layout_marginTop="23dp"
                        android:textColor="#5000ca"
                        android:fontFamily="@font/alegreya_sans_bold"/>

                </androidx.cardview.widget.CardView>
            </RelativeLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="25dp"
                android:id="@+id/cv_tue"
                app:cardBackgroundColor="#5000ca"
                android:layout_marginRight="20dp"


                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="45dp"
                        app:cardBackgroundColor="#EEEDED"
                        android:layout_centerInParent="true"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="TUE"
                            android:textSize="30dp"
                            android:textAlignment="center"
                            android:layout_marginTop="23dp"
                            android:textColor="#5000ca"
                            android:fontFamily="@font/alegreya_sans_bold"/>

                    </androidx.cardview.widget.CardView>
                </RelativeLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="50dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="25dp"
                android:id="@+id/cv_wed"
                android:layout_below="@id/cv_mon"
                android:layout_marginLeft="20dp"
                app:cardBackgroundColor="#5000ca"


                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="45dp"
                        app:cardBackgroundColor="#EEEDED"
                        android:layout_centerInParent="true"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="WED"
                            android:textSize="30dp"
                            android:textAlignment="center"
                            android:layout_marginTop="23dp"
                            android:textColor="#5000ca"
                            android:fontFamily="@font/alegreya_sans_bold"/>

                    </androidx.cardview.widget.CardView>
                </RelativeLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="25dp"
                android:id="@+id/cv_thu"
                app:cardBackgroundColor="#5000ca"
                android:layout_marginRight="20dp"
                android:layout_below="@id/cv_tue"



                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="45dp"
                        app:cardBackgroundColor="#EEEDED"
                        android:layout_centerInParent="true"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="THU"
                            android:textSize="30dp"
                            android:textAlignment="center"
                            android:layout_marginTop="23dp"
                            android:textColor="#5000ca"
                            android:fontFamily="@font/alegreya_sans_bold"/>

                    </androidx.cardview.widget.CardView>
                </RelativeLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="50dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="25dp"
                android:id="@+id/cv_fri"
                android:layout_below="@id/cv_wed"
                android:layout_marginLeft="20dp"
                app:cardBackgroundColor="#5000ca"


                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="45dp"
                        app:cardBackgroundColor="#EEEDED"
                        android:layout_centerInParent="true"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="FRI"
                            android:textSize="30dp"
                            android:textAlignment="center"
                            android:layout_marginTop="23dp"
                            android:textColor="#5000ca"
                            android:fontFamily="@font/alegreya_sans_bold"/>

                    </androidx.cardview.widget.CardView>
                </RelativeLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="25dp"
                android:id="@+id/cv_sat"
                app:cardBackgroundColor="#5000ca"
                android:layout_marginRight="20dp"
                android:layout_below="@id/cv_thu"



                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="45dp"
                        app:cardBackgroundColor="#EEEDED"
                        android:layout_centerInParent="true"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="SAT"
                            android:textSize="30dp"
                            android:textAlignment="center"
                            android:layout_marginTop="23dp"
                            android:textColor="#5000ca"
                            android:fontFamily="@font/alegreya_sans_bold"/>

                    </androidx.cardview.widget.CardView>
                </RelativeLayout>



            </androidx.cardview.widget.CardView>







        </RelativeLayout>


        </RelativeLayout>





    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:id="@+id/bottom_navigation"
        app:menu="@menu/bottom_navigation"
        android:background="#DBDBDB"
        app:itemIconTint="#424242"
        app:itemTextColor="#000000"
        android:layout_alignParentBottom="true"
        app:labelVisibilityMode="labeled"
        />



</RelativeLayout>