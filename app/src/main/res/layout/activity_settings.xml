<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings"
    android:background="#EEEDED">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/ll1"
        android:background="@drawable/workout_background">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text= "SETTINGS"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/alegreya_sans_bold"/>
    </LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_below="@id/ll1"
    android:id="@+id/about_you_rl"
    android:layout_marginTop="40dp">
    <TextView
        android:layout_width="wrap_content"
        android:fontFamily="@font/comfortaa_bold"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:id="@+id/tv_about_you"
        android:text="About you"
        android:textColor="#000000"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:id="@+id/line"
        android:background="#000000"
        android:layout_marginTop="4dp"
        android:layout_below="@id/tv_about_you"/>
    <RelativeLayout
        android:layout_below="@id/line"
        android:layout_width="180dp"
        android:id="@+id/adjust_height"
        android:layout_marginLeft="18dp"
        android:layout_height="80dp"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#504F4F"
            android:text="Height"
            android:id="@+id/height_np_constructor"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_toRightOf="@id/height_np_constructor"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="4dp"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:id="@+id/actual_tv_enter_height"
            android:textColor="#000000"
            android:text="176cm"
            android:textSize="20dp"
            android:textAlignment="gravity"
            android:layout_marginTop="10dp"
            android:layout_below="@id/height_np_constructor"
            android:layout_marginLeft="5dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/actual_tv_enter_height"
            android:src="@drawable/ic_arrow_drop_down_black_24dp"
            android:layout_marginTop="34dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="#000000"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="20dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#000000"
            android:layout_marginTop="10dp"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="2dp"/>



    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/line"
        android:layout_width="180dp"
        android:layout_toRightOf="@id/adjust_height"
        android:layout_marginLeft="15dp"
        android:id="@+id/adjust_age"
        android:layout_height="80dp"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#504F4F"
            android:text="Age"
            android:id="@+id/age_np_constructor"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_toRightOf="@id/age_np_constructor"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="4dp"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:id="@+id/actual_tv_enter_age"
            android:textColor="#000000"
            android:text="19"
            android:textSize="20dp"
            android:textAlignment="gravity"
            android:layout_marginTop="10dp"
            android:layout_below="@id/age_np_constructor"
            android:layout_marginLeft="5dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/actual_tv_enter_age"
            android:src="@drawable/ic_arrow_drop_down_black_24dp"
            android:layout_marginTop="34dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="#000000"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="20dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#000000"
            android:layout_marginTop="10dp"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginLeft="2dp"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>



</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/about_you_rl"
        android:layout_marginTop="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/comfortaa_bold"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:id="@+id/tv_activity_goal"
            android:text="Targets"
            android:textColor="#000000"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:id="@+id/line1"
            android:background="#000000"
            android:layout_marginTop="4dp"
            android:layout_below="@id/tv_activity_goal"/>

        <RelativeLayout
            android:layout_below="@id/line1"
            android:layout_width="180dp"
            android:id="@+id/adjust_target_weight"
            android:layout_marginLeft="18dp"
            android:layout_height="80dp"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#504F4F"
                android:text="Target Weight"
                android:id="@+id/target_np_constructor"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_toRightOf="@id/target_np_constructor"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="4dp"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:id="@+id/actual_tv_enter_target"
                android:textColor="#000000"
                android:text="66.3 kg"
                android:textSize="20dp"
                android:textAlignment="gravity"
                android:layout_marginTop="10dp"
                android:layout_below="@id/target_np_constructor"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/actual_tv_enter_target"
                android:src="@drawable/ic_arrow_drop_down_black_24dp"
                android:layout_marginTop="34dp"/>
            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="#000000"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="20dp"/>
            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="#000000"
                android:layout_marginTop="10dp"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="2dp"/>



        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/line1"
            android:layout_width="180dp"
            android:layout_toRightOf="@id/adjust_target_weight"
            android:id="@+id/adjust_target_steps"
            android:layout_marginLeft="15dp"
            android:layout_height="80dp"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#504F4F"
                android:text="Daily Steps Target"
                android:id="@+id/steps_np_constructor"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_toRightOf="@id/steps_np_constructor"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="4dp"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:id="@+id/actual_tv_enter_steps"
                android:textColor="#000000"
                android:text="6000"
                android:textSize="20dp"
                android:textAlignment="gravity"
                android:layout_marginTop="10dp"
                android:layout_below="@id/steps_np_constructor"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/actual_tv_enter_steps"
                android:src="@drawable/ic_arrow_drop_down_black_24dp"
                android:layout_marginTop="34dp"/>
            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="#000000"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="20dp"/>
            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="#000000"
                android:layout_marginTop="10dp"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_marginLeft="2dp"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>


    </RelativeLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="#DBDBDB"
        app:itemIconTint="#424242"
        app:itemTextColor="#000000"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation"
        app:itemTextAppearanceActive="@style/Style_TextView"/>
</RelativeLayout>
