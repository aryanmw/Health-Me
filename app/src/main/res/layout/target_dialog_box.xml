<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#EEEDED">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target Weight"
            android:textColor="#181F42"
            android:textSize="24sp"
            android:fontFamily="@font/alegreya_sans_bold"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kg"
        android:layout_toRightOf="@id/rel_target"
        android:textSize="20dp"
        android:fontFamily="@font/alegreya_sans_bold"
        android:textColor="#181F42"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="10dp"/>
    <RelativeLayout
        android:id="@+id/rel_target"
        android:layout_width="267dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp">
    <NumberPicker
        android:id="@+id/et_target_dialog"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.Picker"
        />
        <TextView
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/et_target_dialog"
            android:id="@+id/dot"
            android:text="."
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:layout_marginTop="58dp"/>
    <NumberPicker
        android:id="@+id/np_target_grams"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.Picker"
        android:hint="Weight"
        android:layout_toRightOf="@id/dot"
        />
</RelativeLayout>





</RelativeLayout>