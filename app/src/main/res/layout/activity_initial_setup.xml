<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InitialSetup"
    android:background="#eeeded">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/ll1"
        android:background="@drawable/workout_background">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text= "WELCOME"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/alegreya_sans_bold"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/tv_userInfo"
        android:padding="10dp"
        android:layout_below="@id/ll1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/nameeeeeee"
            android:text="Full Name"
            android:textColor="#5000ca"
            android:fontFamily="@font/alegreya_sans_bold"
            android:layout_marginTop="20dp"
            android:textSize="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/nameeeeeee"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:hint="Enter your name here"
            android:id="@+id/et_fullname"/>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#757677"
        android:layout_below="@id/tv_userInfo"
        />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="10dp"
        android:layout_below="@id/ll4"
        android:id="@+id/ll5">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Gender"
            android:textColor="#5000ca"
            android:fontFamily="@font/roboto_bold"
            android:textSize="20dp" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton android:id="@+id/rb_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:outlineSpotShadowColor="#FFFFFF"
                android:textSize="20dp"
                android:text="Male"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/rb_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="Female"
                android:onClick="onRadioButtonClicked"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@id/ll1"
        android:id="@+id/ll3"
        android:paddingLeft="10dp"
        android:layout_marginTop="90dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="Height"
            android:textColor="#5000ca"
            android:textSize="20dp"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginTop="45dp"
            />
        <NumberPicker
            android:layout_width="90dp"
            android:theme="@style/AppTheme.Picker"
            android:layout_height="100dp"
            android:id="@+id/tv_ini_set_height"
            android:layout_marginTop="10dp"

            />
        <TextView
            android:layout_width="35dp"
            android:layout_marginTop="40dp"
            android:layout_height="40dp"
            android:id="@+id/tv_cm"
            android:textSize="15dp"
            android:text="cm"
            android:textAlignment="center"
            android:textColor="#5000ca"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#757677"
            android:layout_marginLeft="7dp"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="Age"
            android:layout_marginLeft="10dp"
            android:textColor="#5000ca"
            android:fontFamily="@font/roboto_bold"
            android:textSize="20dp"
            android:layout_marginTop="45dp"
            />
        <NumberPicker
            android:layout_width="90dp"
            android:theme="@style/AppTheme.Picker"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_ini_set_age"

            />
        <TextView
            android:layout_width="40dp"
            android:layout_marginTop="40dp"
            android:layout_height="40dp"
            android:id="@+id/tv_cm_years"
            android:textSize="15dp"
            android:text="yrs"
            android:textAlignment="center"
            android:textColor="#5000ca"/>




    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#757677"
        android:layout_below="@id/ll3"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#757677"
        android:layout_below="@id/ll8"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#757677"
        android:layout_below="@id/ll4"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#757677"
        android:layout_below="@id/ll5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_below="@id/ll3"
        android:paddingLeft="10dp"
        android:id="@+id/ll8"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Weight"
            android:textColor="#5000ca"
            android:fontFamily="@font/roboto_bold"
            android:textSize="20dp"
            android:layout_marginTop="35dp"
            />
        <NumberPicker
            android:layout_width="90dp"
            android:theme="@style/AppTheme.Picker"
            android:layout_height="100dp"
            android:id="@+id/tv_ini_set_kg"

            />
        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:text="."
            android:textColor="#5000ca"
            android:textAlignment="center"
            android:layout_marginTop="20dp"/>
        <NumberPicker
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:theme="@style/AppTheme.Picker"
            android:id="@+id/tv_ini_set_grams"/>
        <TextView
            android:layout_width="50dp"
            android:layout_marginTop="40dp"
            android:layout_height="match_parent"
            android:id="@+id/tv_kg"
            android:textSize="15dp"
            android:text="kg"
            android:textAlignment="center"
            android:textColor="#5000ca"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/ll8"
        android:id="@+id/ll4"
        android:paddingLeft="10dp"
        android:layout_marginTop="30dp">
    <TextView
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:text="Goal"
        android:textColor="#5000ca"
        android:fontFamily="@font/roboto_bold"
        android:textSize="20dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <RadioButton android:id="@+id/rb_inc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:outlineSpotShadowColor="#FFFFFF"
            android:textSize="15dp"
            android:text="Gain weight"
            android:onClick="onRadioButtonGoalClicked"/>
        <RadioButton android:id="@+id/rb_dec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:text="Lose weight"
            android:onClick="onRadioButtonGoalClicked"/>
        </RadioGroup>
    </LinearLayout>



    <Button
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:text="Done"
        android:layout_marginBottom="10dp"
        android:id="@+id/tv_done"
        android:fontFamily="@font/roboto_bold"
        android:textSize="25dp"
        android:background="@drawable/mybutton"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"/>

</RelativeLayout>